{
    "name": "magento2",
    "author": "Magento Commerce Inc.",
    "description": "Magento2 node modules dependencies for local development",
    "license": "(OSL-3.0 OR AFL-3.0)",
    "repository": {
        "type": "git",
        "url": "https://github.com/magento/magento2.git"
    },
    "engines": {
        "node": ">= 8",
        "npm": ">= 5.6"
    },
    "scripts": {
        "grunt:reset": "grunt clean && grunt exec:dada && grunt less:dada",
        "grunt:serve": "grunt watch",
        "prettier:js": "prettier --single-quote --write \"app/**/*.js\"",
        "prettier:less": "prettier --single-quote --write \"app/**/*.less\"",
        "prettier:php": "prettier --single-quote --write \"app/**/*.php\""
    },
    "prettier": {
        "singleQuote": true,
        "semi": true,
        "tabWidth": 4,
        "bracketSpacing": true,
        "arrowParens": "avoid",
        "trailingComma": "none"
    },
    "husky": {
        "hooks": {
            "pre-commit": "lint-staged"
        }
    },
    "lint-staged": {
        "app/**/*.less": [
            "npm run prettier:less",
            "git add"
        ],
        "app/**/*.php": [
            "npm run prettier:php",
            "git add"
        ]
    },
    "homepage": "http://magento.com/",
    "devDependencies": {
        "@prettier/plugin-php": "0.9.0",
        "glob": "~7.1.1",
        "grunt": "~1.0.1",
        "grunt-autoprefixer": "~3.0.4",
        "grunt-banner": "~0.6.0",
        "grunt-continue": "~0.1.0",
        "grunt-contrib-clean": "~1.0.0",
        "grunt-contrib-connect": "~1.0.2",
        "grunt-contrib-cssmin": "~2.0.0",
        "grunt-contrib-imagemin": "~1.0.1",
        "grunt-contrib-jasmine": "~1.0.0",
        "grunt-contrib-less": "~1.4.1",
        "grunt-contrib-watch": "~1.0.0",
        "grunt-eslint": "~19.0.0",
        "grunt-exec": "~2.0.0",
        "grunt-jscs": "~3.0.1",
        "grunt-replace": "~1.0.1",
        "grunt-styledocco": "~0.3.0",
        "grunt-template-jasmine-requirejs": "~0.2.3",
        "grunt-text-replace": "~0.4.0",
        "husky": "1.1.3",
        "imagemin-svgo": "~5.2.1",
        "lint-staged": "8.0.4",
        "load-grunt-config": "~0.19.2",
        "morgan": "~1.5.0",
        "node-minify": "~2.0.3",
        "path": "~0.12.7",
        "prettier": "1.15.1",
        "serve-static": "~1.7.1",
        "squirejs": "~0.2.1",
        "strip-json-comments": "~2.0.1",
        "time-grunt": "~1.0.0",
        "underscore": "~1.7.0"
    }
}
